<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.tzh.video.activity.SpliceVideoActivity" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/color_fff">
        <com.tzh.baselib.view.title.XAppTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xtbTitleText="视频拼接"/>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:id="@+id/tv_select_head"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="选择视频开头"
            android:layout_margin="16dp"/>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:id="@+id/tv_select_body"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="选择视频中间固定片段"
            android:layout_margin="16dp"/>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:id="@+id/tv_select_content"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="选择视频内容"
            android:layout_margin="16dp"/>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:id="@+id/tv_select_immobilization"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="选择固定视频内容"
            android:layout_margin="16dp"/>
        <com.tzh.baselib.shapeview.ShapeEditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:hint="请输入每段数量"
            android:text="3"
            android:inputType="number"
            android:maxLength="4"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可以生成0个视频"/>
    </LinearLayout>
</layout>
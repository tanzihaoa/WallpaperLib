<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="v"
            type="com.tzh.wallpaper.MainActivity" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/color_fff">
        <com.tzh.mylibrary.view.XAppTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xtbTitleText="视频拼接"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="选择视频"
            android:layout_margin="16dp"/>
    </LinearLayout>
</layout>